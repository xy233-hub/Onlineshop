<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.onlineshop.mapper.ProductImageMapper">
    <resultMap id="ProductImageMap" type="com.example.onlineshop.entity.ProductImage">
        <id property="imageId" column="image_id"/>
        <result property="productId" column="product_id"/>
        <result property="imageUrl" column="image_url"/>
        <result property="imageOrder" column="image_order"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- 插入商品图片 -->
    <insert id="insert" parameterType="com.example.onlineshop.entity.ProductImage">
        INSERT INTO product_images (product_id, image_url, image_order, created_at)
        VALUES (#{productId}, #{imageUrl}, #{imageOrder}, #{createdAt})
    </insert>

    <!-- 根据商品ID查询所有图片 -->
    <select id="findByProductId" parameterType="int" resultMap="ProductImageMap">
        SELECT * FROM product_images WHERE product_id = #{productId} ORDER BY image_order
    </select>

    <!-- 根据商品ID删除所有图片 -->
    <delete id="deleteByProductId" parameterType="int">
        DELETE FROM product_images WHERE product_id = #{productId}
    </delete>
</mapper>