<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.onlineshop.mapper.MediaResourceMapper">
    <resultMap id="MediaResourceMap" type="com.example.onlineshop.entity.MediaResource">
        <id property="mediaId" column="media_id"/>
        <result property="productId" column="product_id"/>
        <result property="mediaType" column="media_type"/>
        <result property="mediaUrl" column="media_url"/>
        <result property="fileName" column="file_name"/>
        <result property="fileSize" column="file_size"/>
        <result property="mimeType" column="mime_type"/>
        <result property="displayOrder" column="display_order"/>
        <result property="isEmbedded" column="is_embedded"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- 插入媒体资源 -->
    <insert id="insert" parameterType="com.example.onlineshop.entity.MediaResource">
        INSERT INTO media_resources
        (product_id, media_type, media_url, file_name, file_size, mime_type, display_order, is_embedded, created_at)
        VALUES
        (
        #{productId},
        #{mediaType},
        #{mediaUrl},
        #{fileName},
        #{fileSize},
        #{mimeType},
        #{displayOrder},
        #{isEmbedded},
        <choose>
            <when test="createdAt != null">#{createdAt}</when>
            <otherwise>NOW()</otherwise>
        </choose>
        )
    </insert>

    <!-- 根据商品ID查询所有媒体资源 -->
    <select id="findByProductId" parameterType="int" resultMap="MediaResourceMap">
        SELECT * FROM media_resources WHERE product_id = #{productId} ORDER BY display_order
    </select>

    <!-- 根据商品ID删除所有媒体资源 -->
    <delete id="deleteByProductId" parameterType="int">
        DELETE FROM media_resources WHERE product_id = #{productId}
    </delete>
</mapper>