<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.onlineshop.mapper.ProductImageMapper">

    <resultMap id="ProductImageMap" type="com.example.onlineshop.entity.ProductImage">
        <id property="imageId" column="image_id"/>
        <result property="productId" column="product_id"/>
        <result property="imageUrl" column="image_url"/>
        <result property="imageOrder" column="image_order"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- 插入图片记录，image_id 自增 -->
    <insert id="insert" parameterType="com.example.onlineshop.entity.ProductImage"
            useGeneratedKeys="true" keyProperty="imageId" keyColumn="image_id">
        INSERT INTO product_images (product_id, image_url, image_order, created_at)
        VALUES (#{productId}, #{imageUrl}, #{imageOrder}, NOW())
    </insert>

    <!-- 根据 image_id 查询单张图片 -->
    <select id="findById" parameterType="int" resultMap="ProductImageMap">
        SELECT image_id, product_id, image_url, image_order, created_at
        FROM product_images
        WHERE image_id = #{imageId}
    </select>

    <!-- 查询某商品的所有图片（按顺序） -->
    <select id="findByProductId" parameterType="int" resultMap="ProductImageMap">
        SELECT image_id, product_id, image_url, image_order, created_at
        FROM product_images
        WHERE product_id = #{productId}
        ORDER BY image_order ASC, image_id ASC
    </select>

    <!-- 更新图片（可更新 url 和顺序） -->
    <update id="update" parameterType="com.example.onlineshop.entity.ProductImage">
        UPDATE product_images
        <set>
            <if test="imageUrl != null">image_url = #{imageUrl},</if>
            <if test="imageOrder != null">image_order = #{imageOrder},</if>
        </set>
        WHERE image_id = #{imageId}
    </update>

    <!-- 根据 image_id 删除 -->
    <delete id="deleteById" parameterType="int">
        DELETE FROM product_images WHERE image_id = #{imageId}
    </delete>

    <!-- 删除某商品的所有图片 -->
    <delete id="deleteByProductId" parameterType="int">
        DELETE FROM product_images WHERE product_id = #{productId}
    </delete>

</mapper>

