<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.onlineshop.mapper.CustomerMapper">

    <resultMap id="CustomerMap" type="com.example.onlineshop.entity.Customer">
        <id property="customerId" column="customer_id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="phone" column="phone"/>
        <result property="defaultAddress" column="default_address"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <insert id="insert" parameterType="com.example.onlineshop.entity.Customer" useGeneratedKeys="true" keyProperty="customerId">
        INSERT INTO customers(username, password, phone, default_address)
        VALUES(#{username}, #{password}, #{phone}, #{defaultAddress})
    </insert>

    <select id="findByUsername" parameterType="string" resultMap="CustomerMap">
        SELECT * FROM customers WHERE username = #{username}
    </select>

    <select id="findByPhone" parameterType="string" resultMap="CustomerMap">
        SELECT * FROM customers WHERE phone = #{phone}
    </select>

    <select id="findById" parameterType="int" resultMap="CustomerMap">
        SELECT * FROM customers WHERE customer_id = #{customerId}
    </select>
    
    <select id="findAllWithPagination" parameterType="map" resultMap="CustomerMap">
        SELECT * FROM customers
        ORDER BY created_at DESC
        LIMIT #{offset}, #{limit}
    </select>
    
    <select id="countAll" resultType="int">
        SELECT COUNT(*) FROM customers
    </select>

</mapper>